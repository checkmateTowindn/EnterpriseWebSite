    <script type="text/javascript">
        $(function () {
            GetPageList();
            dataLoad();
            function GetPageList() {
                $.ajax({
                    type: 'post',
                    url: "../AdminInfoManage/GetPageList",
                    success: function (result) {
                        var data = result.DataObj;
                        for (var i = 0; i < data.length; i++) {
                            $(".selectPage").append('<option value="' + data[i].Id + '">' + data[i].PageName + '</option>');
                        }
                    },
                    error: function (data) {
                        console.log(data);
                    },
                })
            }
            $("#search").click(function () {
                dataLoad();
            })
            /*
            *加载数据
            */
            function dataLoad() {
                //构造条件
                var data = {};
                var htmlPageId = $.trim($("#articlecolumn").val()) == 0 ? "" : $.trim($("#articlecolumn").val());
                var startDate = $.trim($("#datemin").val());
                var endDate = $.trim($("#datemax").val());
                var keyWord = $.trim($("#keyWord").val());
                var isAdmin = $.trim($("#isAdmin").val()) == 0 ? null : $.trim($("#isAdmin").val())
                data["htmlPageId"] = htmlPageId;
                data["startDate"] = startDate;
                data["endDate"] = endDate;
                data["keyWord"] = keyWord;
                data["isAdmin"] = isAdmin;
                //获取数据
                $.ajax({
                    url: "../AdminMessageManage/QueryMessage",
                    type: "POST",
                    data: data,
                    success: function (result) {
                        if (result.ResultType == 0){
                            //加载到dataTable中
                            var dataResult = JSON.parse(result.DataObj);
                            $('#datatable').DataTable({
                                "aaData": dataResult,
                                "ordering": false,//thead上的排序按钮
                                "bProcessing": true,//显示加载中
                                "bStateSave": true,
                                "oLanguage": {
                                    "sLengthMenu": "每页显示 _MENU_  条",
                                    "sZeroRecords": "没有找到符合条件的数据",
                                    "sProcessing": "我也是醉了，正在加载数据...",
                                    "sInfo": "当前第 _START_ - _END_ 条　共计 _TOTAL_ 条",
                                    "sInfoEmpty": "没有有记录",
                                    "sInfoFiltered": "(从 _MAX_ 条记录中过滤)",
                                    "sSearch": "搜索：",
                                    "oPaginate": {
                                        "sFirst": "首页",
                                        "sPrevious": "前一页",
                                        "sNext": "后一页",
                                        "sLast": "尾页"
                                    }
                                },
                                "aoColumns": [
                                    {
                                        "sTitle": '<input type="checkbox" name="" value="">',
                                        "width": "5%",
                                        "mData": "Id",
                                        "render": function (data, type, full) {
                                            // 显示行号  
                                            return '<input type="checkbox" value="' + full.Id + '" name="">';
                                        }
                                    },
                                    {
                                        "sTitle": "Id",
                                        "sWidth": "5%",
                                        "mData": "Id",
                                        "mRender": function (data, type, full) {
                                            return full.Id;
                                        }
                                    },
                                    {
                                        "sTitle": "昵称",
                                        "sWidth": "10%",
                                        "mData": "Nick",
                                        "mRender": function (data, type, full) {
                                            return full.Nick;
                                        }
                                    },
                                    {
                                        "sTitle": "联系电话",
                                        "sWidth": "10%",
                                        "mData": "Mobile",
                                        "mRender": function (data, type, full) {
                                            var mobile = full.Mobile == "" ? "" : full.Mobile;
                                            return mobile;
                                        }
                                    },
                                    {
                                        "sTitle": "回复内容",
                                        "sWidth": "40%",
                                        "mData": "MessageContent",
                                        "mRender": function (data, type, full) {
                                            return full.MessageContent;
                                        }
                                    },
                                    {
                                        "sTitle": "回复日期",
                                        "sWidth": "10%",
                                        "mData": "AddDate",
                                        "mRender": function (data, type, full) {
                                            return full.AddDate;
                                        }
                                    },
                                    {
                                        "sTitle": "是否为第一级",
                                        "sWidth": "5%",
                                        "mRender": function (data, type, full) {
                                            var upperLeve = "<span style='color:blue'>是</span>";
                                            if (full.UpperLeve != 0)
                                                upperLeve = "<span style='color:red'>否</span>";
                                                return upperLeve;
                                        }
                                    },
                                    {
                                        "sTitle": "是否已回复",
                                        "sWidth": "5%",
                                        "mRender": function (data, type, full) {
                                            var isReply = "<span style='color:red'>否</span>";
                                            for (var i = 0; i < full.length; i++) {
                                                if (full[i].UpperLeve == full.Id)
                                                    isReply = "<span style='color:red'>否</span>";
                                            }
                                            return isReply;
                                        }
                                    },
                                    {
                                        "sTitle": "操作",
                                        "sWidth": "10%",
                                        "mData": "AddDate",
                                        "mRender": function (data, type, full) {
                                            var htm = '<a title="回复" href="javascript:;" onclick="member_edit(\'回复\',\'AdminReply\',\'' + full.Id + '\',\'800\',\'510\')" style="text-decoration:none"><i class="Hui-iconfont">&#xe70c;</i></a> <a title="编辑" href="javascript:;" onclick="member_edit(\'编辑\',\'AddOrEdit\',\'' + full.Id + '\',\'800\',\'510\')" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a> <a title="删除" href="javascript:;" onclick="member_del(this,\'' + full.Id +'\')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6e2;</i></a>';
                                            return htm;
                                        }
                                    },
                                ]
                            });
                            console.log(dataResult);
                        }
                    },
                    error: function (data) {
                        console.log(data);
                    }
                })
            }

